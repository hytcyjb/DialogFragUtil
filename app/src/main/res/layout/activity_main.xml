<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <Button
        android:id="@+id/alert_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@android:color/white"
        android:text="AlertDialog对话框"
        android:textColor="@android:color/black"
        android:textSize="20dp" />


    <Button
        android:id="@+id/diafr_util_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alert_id"
        android:layout_marginTop="50dp"
        android:background="@android:color/white"
        android:text="DialogFragment封装简单对话框"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/diafr_complexe_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alert_id"
        android:layout_marginTop="50dp"
        android:background="@android:color/white"
        android:text="DialogFragment封装复杂对话框"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

</LinearLayout>
